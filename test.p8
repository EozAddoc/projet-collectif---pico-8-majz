__lua__
function _init()
	p={x=60,y=80,speed=1}
	bullets={}
	pigeons={}
	spawn_pigeons()
end

function _update60()
	if (btn(➡️))	p.x+=p.speed
	if (btn(⬅️)) p.x-=p.speed
	if (btnp(❎)) shoot()
	
	update_bullets()
	
	update_pigeons()
	if #pigeons==0 then
		spawn_pigeons()
	end
	
	camera_follow()
end

function _draw()
	cls(13)
	spr(2,p.x,p.y)
	
	--pigeons
	for e in all(pigeons) do
		spr(1,e.x,e.y)
	end
	
	--shoot
	for b in all(bullets) do
		spr(4,b.x,b.y)
	end
end
-->8
--bullets

function shoot()
	local new_bullet={
		x=p.x,
		y=p.y,
		speed=4
	}
	add(bullets, new_bullet)
end

function update_bullets()
	for b in all(bullets) do
		b.y-=b.speed
		if (b.y<-8) del(bullets,b)
	end
end
-->8
--camera

function camera_follow()
	cam_x=p.x-60
	cam_x=mid(0,cam_x,896)
	camera(cam_x)
end
-->8
--pigeons

function spawn_pigeons()
	add(pigeons,{
		x=60,
		y=10,
		life=4
	})
end

function update_pigeons()
	for pigeon in all(pigeons) do
		pigeon.x -= 0.3
		if pigeon.x < 130 then
			del(pigeons,pigeon)
		end
	end
end
